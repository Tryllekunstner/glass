rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User sessions subcollection
      match /sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Transcripts subcollection within sessions
        match /transcripts/{transcriptId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
        
        // AI messages subcollection within sessions
        match /aiMessages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
        
        // Summary subcollection within sessions
        match /summary/{document=**} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
      
      // User prompt presets subcollection
      match /promptPresets/{presetId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // AI profiles subcollection - user-configurable AI model presets
      match /aiProfiles/{profileId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User preferences and settings
      match /preferences/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User activity and analytics data
      match /activity/{activityId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Encrypted API keys and sensitive data
      match /credentials/{credentialId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Public configuration data (read-only for authenticated users)
    match /config/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write config (handled via admin SDK)
    }
    
    // System status and health checks (read-only for authenticated users)
    match /system/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Global AI model configurations (read-only for authenticated users)
    match /aiModels/{modelId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can manage AI model configs
    }
    
    // Usage analytics and metrics (read-only for authenticated users)
    match /analytics/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only system can write analytics
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
